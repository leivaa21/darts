{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "moduleSuffixes": [".native", ".ios", ".android", ".web", ""],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
